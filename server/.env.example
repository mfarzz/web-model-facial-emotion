# Neo Telemetri Facial Emotion Recognition Server
# Environment Configuration Template
# Copy this file to .env and modify the values as needed

# Flask Configuration
SECRET_KEY=your_secret_key_here_change_in_production
FLASK_ENV=development
FLASK_DEBUG=True

# Server Configuration
HOST=127.0.0.1
PORT=5000

# Model Paths (adjust according to your file structure)
MODEL_PATH=assets/model.h5
MODEL_JSON_PATH=assets/model.json
CASCADE_PATH=assets/haarcascade_frontalface_default.xml

# Alternative Model Paths (fallback if assets folder doesn't exist)
ALT_MODEL_PATH=../model/model.h5
ALT_MODEL_JSON_PATH=../model/model.json
ALT_CASCADE_PATH=../model/haarcascade_frontalface_default.xml

# Image Processing Configuration
MAX_IMAGE_SIZE=2048
MIN_FACE_SIZE=30
CONFIDENCE_THRESHOLD=0.7

# Face Detection Parameters
SCALE_FACTOR=1.1
MIN_NEIGHBORS=5
MIN_SIZE_WIDTH=30
MIN_SIZE_HEIGHT=30

# Noise Reduction Settings
ENABLE_GAUSSIAN_BLUR=True
ENABLE_BILATERAL_FILTER=True
ENABLE_MORPHOLOGICAL_OPS=True
GAUSSIAN_KERNEL_SIZE=5
BILATERAL_D=9
BILATERAL_SIGMA_COLOR=75
BILATERAL_SIGMA_SPACE=75

# API Configuration
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp,tiff
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/server.log
ENABLE_FILE_LOGGING=False

# Performance Settings
MAX_WORKERS=4
DETECTION_TIMEOUT=30
PROCESSING_CACHE_SIZE=100

# Security Settings
RATE_LIMIT_PER_MINUTE=60
ENABLE_CSRF_PROTECTION=False
ENABLE_CORS=True

# Development Settings
ENABLE_PROFILING=False
ENABLE_DETAILED_ERRORS=True
